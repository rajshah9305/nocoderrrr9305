# ================================
# AI APP BUILDER PRO - ENVIRONMENT CONFIGURATION
# ================================
# Copy this file to .env and replace with your actual values
# NEVER commit .env to version control!

# ================================
# APPLICATION CONFIGURATION
# ================================
APP_NAME="AI App Builder Pro"
APP_VERSION="2.0.0"
NODE_ENV=development
FLASK_ENV=development
FLASK_DEBUG=True

# Security
SECRET_KEY=your-super-secret-key-minimum-32-characters-long-please-change-this
JWT_SECRET_KEY=another-super-secret-key-for-jwt-tokens-please-change-this

# ================================
# DATABASE CONFIGURATION
# ================================
# For local development (SQLite)
DATABASE_URL=sqlite:///ai_app_builder.db

# For PostgreSQL (production recommended)
# DATABASE_URL=postgresql://username:password@localhost:5432/ai_app_builder_pro

# For Railway PostgreSQL
# DATABASE_URL=postgresql://postgres:password@containers-us-west-1.railway.app:5432/railway

# For Supabase PostgreSQL  
# DATABASE_URL=postgresql://postgres:password@db.project.supabase.co:5432/postgres

# For Heroku PostgreSQL (automatically provided)
# DATABASE_URL=postgres://user:password@host:port/database

# Database Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ================================
# AI SERVICE API KEYS
# ================================
# Cerebras (Fast inference)
CEREBRAS_API_KEY=csk-your-cerebras-api-key-here

# OpenAI (GPT models)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=org-your-openai-organization-id

# Anthropic (Claude models)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Hugging Face (Open source models)
HUGGINGFACE_API_KEY=hf_your-huggingface-api-key-here

# Google AI (Gemini models)
GOOGLE_API_KEY=your-google-ai-api-key-here

# ================================
# DEPLOYMENT PLATFORM API KEYS
# ================================
# Vercel (Frontend deployment)
VERCEL_TOKEN=your-vercel-token-here
VERCEL_TEAM_ID=your-vercel-team-id-here

# Netlify (Alternative frontend deployment)
NETLIFY_ACCESS_TOKEN=your-netlify-access-token-here

# Railway (Backend deployment)
RAILWAY_TOKEN=your-railway-token-here

# Heroku (Alternative backend deployment)
HEROKU_API_KEY=your-heroku-api-key-here

# ================================
# THIRD-PARTY SERVICES
# ================================
# Supabase (Database + Auth)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Stripe (Payment processing)
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# SendGrid (Email service)
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
FROM_EMAIL=noreply@yourapp.com

# GitHub (Code repository integration)
GITHUB_TOKEN=ghp_your-github-personal-access-token
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# ================================
# CACHING & PERFORMANCE
# ================================
# Redis (Caching and session storage)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password-if-required

# Redis Cloud (production)
# REDIS_URL=rediss://username:password@redis-host:port

# ================================
# MONITORING & OBSERVABILITY
# ================================
# Sentry (Error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development

# PostHog (Analytics)
POSTHOG_API_KEY=phc_your-posthog-api-key
POSTHOG_HOST=https://app.posthog.com

# LogTail (Log management)
LOGTAIL_SOURCE_TOKEN=your-logtail-source-token

# ================================
# CORS & SECURITY CONFIGURATION
# ================================
# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://your-app.vercel.app

# Trusted hosts
TRUSTED_HOSTS=localhost,127.0.0.1,your-app.vercel.app

# Rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ================================
# FILE STORAGE & CDN
# ================================
# AWS S3 (File storage)
AWS_ACCESS_KEY_ID=AKIA-your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# Cloudflare (CDN and DNS)
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id

# ================================
# DEVELOPMENT SETTINGS
# ================================
# Local development ports
FRONTEND_PORT=5173
BACKEND_PORT=5000
SOCKET_PORT=5001

# Debug settings
DEBUG_SQL=False
DEBUG_SOCKETIO=False
LOG_LEVEL=INFO

# ================================
# TESTING CONFIGURATION
# ================================
# Test database (automatically created)
TEST_DATABASE_URL=sqlite:///test.db

# Test API keys (use test/sandbox keys only)
TEST_OPENAI_API_KEY=sk-test-your-test-openai-key
TEST_STRIPE_SECRET_KEY=sk_test_your-test-stripe-key

# ================================
# PRODUCTION OVERRIDES
# ================================
# These will override development settings in production

# Production database (set by hosting provider)
# DATABASE_URL=postgresql://prod-user:prod-password@prod-host:5432/prod-db

# Production security
# SECRET_KEY=your-production-secret-key-64-characters-minimum-entropy-required
# JWT_SECRET_KEY=your-production-jwt-secret-key

# Production CORS (restrict to your domains only)
# CORS_ORIGINS=https://your-app.com,https://www.your-app.com

# Production logging
# LOG_LEVEL=WARNING
# SENTRY_ENVIRONMENT=production

# ================================
# OPTIONAL FEATURE FLAGS
# ================================
# Enable/disable features
ENABLE_CHAT=True
ENABLE_REAL_TIME_GENERATION=True
ENABLE_PROJECT_SHARING=False
ENABLE_USER_ANALYTICS=True
ENABLE_BACKGROUND_TASKS=True

# AI Model preferences
DEFAULT_AI_MODEL=gpt-3.5-turbo
FALLBACK_AI_MODEL=claude-3-haiku
MAX_TOKENS_PER_REQUEST=4000

# Generation settings
MAX_GENERATION_TIME_MINUTES=10
MAX_CONCURRENT_GENERATIONS=5
GENERATION_TIMEOUT_SECONDS=600

# ================================
# WEBHOOK ENDPOINTS
# ================================
# Internal webhook URLs for integrations
WEBHOOK_BASE_URL=https://your-api.railway.app
STRIPE_WEBHOOK_ENDPOINT=/webhooks/stripe
GITHUB_WEBHOOK_ENDPOINT=/webhooks/github

# ================================
# NOTES
# ================================
# 1. Replace all 'your-*' placeholders with actual values
# 2. Generate strong random strings for SECRET_KEY and JWT_SECRET_KEY
# 3. Use different API keys for development and production
# 4. Never commit this file to version control
# 5. Use a secret management service in production
# 6. Rotate keys regularly for security
# 7. Monitor API usage and set up billing alerts
